<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DNP_OLSM_WEB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <title>Admin Panel</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background: linear-gradient(to right, #11998e, #38ef7d);
            padding: 20px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow-y: auto; 
            max-height: 100vh; 
            direction: rtl; 
        }

           
            .sidebar * {
                direction: ltr;
                text-align: left;
            }

            
            .sidebar::-webkit-scrollbar {
                width: 8px;
                background: transparent;
            }

            .sidebar::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.2);
                border-radius: 10px;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: rgba(255, 255, 255, 0.5);
                border-radius: 10px;
            }

            .sidebar h2 {
                color: white;
                text-align: center;
                font-size: 22px;
                margin-bottom: 20px;
                font-weight: bold;
                letter-spacing: 1px;
                cursor: pointer;
               
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
                width: 100%;
            }

                .sidebar ul li {
                    padding: 1px 1px;
                   
                    font-size: 16px;
                    font-weight: 600;
                    color: white;
                    border-radius: 8px;
                    cursor: pointer;
                    transition: background 0.3s ease, transform 0.2s ease;
                }

                    .sidebar ul li a {
                        text-decoration: none;
                        color: white;
                        display: block;
                        width: 100%;
                        height: 100%;
                    }

                    .sidebar ul li:hover {
                        background: rgba(255, 255, 255, 0.2);
                        transform: scale(1.05);
                    }


        .content {
            margin-left: 270px;
            padding: 20px;
            width: calc(100% - 270px);
        }


        .content {
            margin-left: 270px; /* Adjust this based on sidebar width */
            padding: 20px;
            width: calc(100% - 270px);
        }

        .section {
            display: none;
        }

        .active {
            display: block;
        }

        a{
          margin:10px!important;
        }
       
    </style>
</head>
<body>
    <div class="sidebar">
        <h2 onclick="redirectToDashboard()" style="cursor: pointer;">Admin Panel</h2>
        <ul>
           
            <li><a href="/Admin/AdminDashBoard">Admin Dashboard</a></li>
            <li> <a href="/Course/ManageCourses">Coursrs</a></li>
            <li><a href="/Admin/AdminLogInResistration">Add Question & Answers</a></li>
            <li><a href="/Admin/AdminLogInResistration">Add Keyword</a></li>
            <li><a href="/Admin/AdminLogInResistration">View Students</a></li>
            <li><a href="/Admin/AdminLogInResistration">View Results</a></li>
            <li><a href="/Admin/AdminLogInResistration">Change Student Password</a></li>
            <li><a href="/Admin/AdminLogInResistration">Settings</a></li>
            <li><a href="/Admin/AdminLogOut">LogOut</a></li>
        </ul>
    </div>
    <div class="content">
        
        @RenderBody()
    </div>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function redirectToDashboard() {
            window.location.href = "/Admin/AdminLogInResistration";
        }
    </script>

</body>
</html>
